<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- set the border of the box with white and 1 dp thin line -->
    <stroke
        android:width="1dp"
        android:color="@color/white"
        />

    <!-- set all 4 corners of the border with radius to make the box rounded-->
    <corners
        android:radius="15dp"
        />

</shape>